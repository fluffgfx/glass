{
  "main": {
    "position": "relative",
    "margin": 0,
    "padding": 0,
    "minHeight": 100
  },

  "areaDiv": {
    "position": "absolute",
    "top": 0,
    "left": 0,
    "width": "100%",
    "height": "100%"
  },

  "area": {
    "resize": "none",
    "overflowX": "hidden",
    "overflowY": "scroll",
    "border": "none",
    "padding": 0,
    "margin": 0,
    "font": "14px monospace",
    "position": "absolute",
    "top": 0,
    "color": "rgba(0, 0, 0, 0)",
    "textDecoration": "none"
  },

  "displayDiv": {
    "position": "absolute",
    "top": 0,
    "left": 0,
    "pointerEvents": "none",
    "width": "100%",
    "height": "100%",
    "overflowY": "scroll"
  },

  "display": {
    "margin": 0,
    "padding": 0,
    "border": 0,
    "font": "14px monospace",
    "position": "absolute",
    "top": 0,
    "height": "auto",
    "whiteSpace": "pre-wrap",
    "overflow": "visible"
  },

  "lineNumbersDiv": {
    "width": "4%",
    "margin": 0,
    "marginRight": "1%",
    "padding": 0,
    "border": 0,
    "font": "14px monospace",
    "position": "absolute",
    "top": 0,
    "left": 0,
    "height": "100%",
    "backgroundColor": "#ccc"
  },

  "lineNumbers": {
    "margin": 0,
    "padding": 0,
    "border": 0,
    "backgroundColor": "#ccc",
    "textAlign": "right"
  },

  "cursorParentDiv": {
    "position": "absolute",    
    "height": 14,
    "font": "14px monospace",
    "margin": 0,
    "padding": 0,
    "border": 0,
    "fontWeight": "bold"
  },

  "cursorChildDiv": {
    "position": "relative",
    "width": "100%",
    "height": "100%"
  },

  "cursor": {
    "position": "absolute",
    "top": 0
  }
}
